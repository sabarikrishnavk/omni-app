<!-- Cart Items  -->

<p>CartId :{{pageData.cartsid}}</p>
<div class = "cart-page">
    <div class="cart-page-inner">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#pageData.items as |item| }}
                    <tr>
                        <td>
                            <div class="img">
                                <a href="#"><img src="{{../configData.dam-url}}/img/product-1.jpg" alt="Image"></a>
                                <p>{{item.details.sku}} -{{configData.dam-url}}</p>
                            </div>
                        </td>
                        <td>${{item.details.price}} <{{item.status}}</td>
                        <td>
                            <div class="qty">
                                <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                <input type="text" value="{{item.details.qty}}">
                                <button class="btn-plus"><i class="fa fa-plus"></i></button>
                            </div>
                        </td>
                        <td>${{item.details.total}}</td>
                        <td><button><i class="fa fa-trash"></i></button></td>
                    </tr>  
                    {{/pageData.items}}
                </tbody>
            </table>
        </div>
    </div>  
</div>